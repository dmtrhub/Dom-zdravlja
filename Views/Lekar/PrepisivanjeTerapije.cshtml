@model Dom_zdravlja.Models.Terapija

@{
    ViewBag.Title = "Prepisivanje terapije";
}

<div class="container">
    <h2 class="text-center text-primary" style="margin-top: 30px">@ViewBag.Title</h2>

    @using (Html.BeginForm("PrepisivanjeTerapije", "Lekar", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Pacijent.KorisnickoIme)

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Unesite podatke o terapiji</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Naziv, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Opis, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Opis, new { @class = "form-control", rows = 4 })
                </div>

                <button type="submit" class="btn btn-success">Prepiši</button>
            </div>
        </div>
    }
</div>
