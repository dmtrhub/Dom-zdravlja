@model Dom_zdravlja.Models.Lekar

@{
    ViewBag.Title = "Lekar";
}

<div class="container">
    <h2 class="text-center text-primary" style="margin-top: 30px">Lekar @Model.KorisnickoIme</h2>

    <div class="row mb-4" style="margin-top: 20px">
        <div class="col-md-12 text-right">
            <a href="@Url.Action("KreirajTermin", "Lekar")" class="btn btn-success">
                <i class="fa fa-plus"></i> Kreirajte termin
            </a>
            @Html.ActionLink("Prepišite terapiju", "IzborPacijentaZaTerapiju", null, new { @class = "btn btn-primary", @style = "margin-left: 10px;" })
            @Html.ActionLink("Pregledajte terapije", "PregledTerapija", "Lekar", null, new { @class = "btn btn-primary", @style = "margin-left: 10px;" })
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Vaši termini</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Pacijent</th>
                        <th>Datum</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var termin in Model.Termini)
                    {
                        <tr>
                            <td>@termin.KorisnickoImePacijenta</td>
                            <td>@termin.DatumVreme.ToString("dd'/'MM'/'yyyy HH:mm")</td>
                            <td>@termin.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
