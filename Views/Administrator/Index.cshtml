@model List<Dom_zdravlja.Models.Pacijent>

@{
    ViewBag.Title = "Admin";
    var admin = Session["User"] as Dom_zdravlja.Models.Administrator;
}

<h2 class="text-center text-primary" style="margin-top: 30px">Administrator @admin.KorisnickoIme</h2>

<div class="row mb-4">
    <div class="col-md-12 text-right">
        <a href="@Url.Action("KreirajPacijenta", "Administrator")" class="btn btn-success">
            <i class="fa fa-plus "></i> Kreiraj novog pacijenta
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header btn-primary text-white">
        <h3 class="card-title">Lista svih pacijenata</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Datum rođenja</th>
                    <th>Email</th>
                    <th>JMBG</th>
                    <th>Korisničko ime</th>
                    <th>Šifra</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pacijent in Model)
                {
                    <tr>
                        <td>@pacijent.Ime</td>
                        <td>@pacijent.Prezime</td>
                        <td>@pacijent.DatumRodjenja.ToString("dd'/'MM'/'yyyy")</td>
                        <td>@pacijent.Email</td>
                        <td>@pacijent.JMBG</td>
                        <td>@pacijent.KorisnickoIme</td>
                        <td>@pacijent.Sifra</td>
                        <td>
                            <a href="@Url.Action("AzurirajPacijenta", "Administrator", new { korisnickoIme = pacijent.KorisnickoIme })" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i> Ažuriraj
                            </a>
                            <a href="@Url.Action("ObrisiPacijenta", "Administrator", new { korisnickoIme = pacijent.KorisnickoIme })" class="btn btn-danger btn-sm" onclick="return confirm('Da li ste sigurni da želite da obrišete ovog pacijenta?');">
                                <i class="fa fa-trash"></i> Obriši
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

