@model List<Dom_zdravlja.Models.Pacijent>

@{
    ViewBag.Title = "Vaši pacijenti";
}

<div class="container">
    <h2 class="text-center text-primary" style="margin-top: 30px">@ViewBag.Title</h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Lista vaših pacijenata</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Ime</th>
                        <th>Prezime</th>
                        <th>Korisničko ime</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pacijent in Model)
                    {
                        <tr>
                            <td>@pacijent.Ime</td>
                            <td>@pacijent.Prezime</td>
                            <td>@pacijent.KorisnickoIme</td>
                            <td>
                                <a href="@Url.Action("PrepisivanjeTerapije", "Lekar", new { pacijentKorisnickoIme = pacijent.KorisnickoIme })" class="btn btn-primary btn-sm">
                                    <i class="fa fa-pencil"></i> Prepišite terapiju
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
